@model Trupanion.Pets.Web.Models.PetViewModel

@{
    ViewBag.Title = "Remove Pet";
}

<h2>Remove Pet from @Model.Owner</h2>

<h3>Are you sure you want to remove @Model.Name?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Breed
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Breed)
        </dd>

        <dt>
            Birthday
        </dt>

        <dd>
            @if (Model.DateOfBirth != null)
            {
                @Model.DateOfBirth.Value.ToShortDateString()
            }
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.Breed)
        @Html.HiddenFor(m => m.BreedId)
        @Html.HiddenFor(m => m.DateOfBirth)
        @Html.HiddenFor(m => m.Name)
        @Html.HiddenFor(m => m.Owner)
        @Html.HiddenFor(m => m.PetOwnerId)

        @Html.ValidationSummary()
        <div class="form-actions no-color">
            <input type="submit" value="Remove" class="btn btn-default" /> |
            @Html.ActionLink("Back to Policy", "View", "Policies", new { id = Model.PetOwnerId }, null)
        </div>
    }
</div>

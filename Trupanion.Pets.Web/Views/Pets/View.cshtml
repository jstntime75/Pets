@model Trupanion.Pets.Web.Models.PetViewModel

@{
    ViewBag.Title = "View";
}

<h2>@Model.Name</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Owner
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Owner)
        </dd>

        <dt>
            Breed
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Breed)
        </dd>

        <dt>
           Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Birthday
        </dt>

        <dd>
            @if (Model.DateOfBirth != null)
            {
                @Model.DateOfBirth.Value.ToShortDateString()
            }
        </dd>

    </dl>
</div>
<p>
    <a href="@Url.Action("Delete", "Pets", new { id = Model.Id })">Remove Pet</a> |
    <a href="@Url.Action("Transfer", "Pets", new { id = Model.Id })">Transfer Pet</a> |
    @Html.ActionLink("Back to Policy", "View", "Policies", new { id = Model.PetOwnerId }, null)
</p>

@model Trupanion.Pets.Web.Models.TransferPetViewModel

@{
    ViewBag.Title = "Transfer";
}

<h2>Transfer @Model.Name</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Owner
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OwnerName)
        </dd>
        <dt>
            Breed
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Breed)
        </dd>
    </dl>
</div>
<div class="form-horizontal">
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.OwnerId)
    @Html.HiddenFor(m => m.OwnerName)
    @Html.HiddenFor(m => m.BreedId)
    @Html.HiddenFor(m => m.Breed)
    @Html.HiddenFor(m => m.DateOfBirth)
    @Html.HiddenFor(m => m.Name)

    @Html.ValidationSummary()

    <div class="form-group">
        <div class="form-group">
            <label class="control-label col-md-2">Transfer To:</label>
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.SelectedOwnerId, Model.Owners, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SelectedOwnerId, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Transfer" class="btn btn-default" />
        </div>
    </div>
}
</div>
<p>
    @Html.ActionLink("Back to Pet", "View", "Pets", new { id = Model.Id }, null)
</p>

@model Trupanion.Pets.Web.Models.PetOwnerViewModel

@{
    ViewBag.Title = "Cancel";
}

<h2>Cancel Policy</h2>

<h3>Are you sure you want to Cancel this policy?</h3>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    <dl class="dl-horizontal">
        <dt>
            Policy Number
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PolicyNumber)
            @Html.HiddenFor(m => m.PolicyNumber)
        </dd>

        <dt>
            Owner
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
            @Html.HiddenFor(m => m.Name)
        </dd>

        <dt>
            Enrollment Date
        </dt>

        <dd>
            @if (Model.PolicyDate != null)
            {
                @Model.PolicyDate.Value.ToShortDateString()
            }
            @Html.HiddenFor(m => m.PolicyDate)
        </dd>

    </dl>
        <div class="form-actions no-color">
            <input type="submit" value="Cancel" class="btn btn-default" /> |
            @Html.ActionLink("Back to Policies", "Index")
        </div>
}
